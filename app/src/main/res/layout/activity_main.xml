<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Image Classify"
        android:id="@+id/title"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="3dp"
        android:text="Please use right hand."
        android:textAlignment="center"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="370sp"
        android:layout_height="300sp"
        android:layout_below="@id/left"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/classAs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="3dp"
        android:text="Classified as:"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/classAs"
        android:layout_marginTop="-1dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/confidences"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/result"
        android:layout_marginTop="2dp"
        android:text="Confidences"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/objectConfi"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_below="@+id/confidences"
        android:layout_marginTop="-15dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:id="@+id/camera"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/objectConfi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Capture Image" />

</RelativeLayout>